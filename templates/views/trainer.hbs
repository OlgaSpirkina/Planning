<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="/js/app.js" type="text/javascript" defer></script>
    <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- CSS & Font -->
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <!-- JS -->
  <script src="/js/hello.js" type="text/javascript" defer></script>
  <title>Trainers Page</title>
</head>
<body class="body">
  {{>header}}
  <section class="container-fluid">
    <h1>{{title}}</h1>
      <p>address mail: {{email}}</p>
      <p>numéro de téléphone: {{mobile}}</p>
  </section>
  <section class="container-fluid">
    <div class="row">
      <div class="col-3 d-flex flex-column justify-content-start align-items-center">
          {{#each allClasses}}
          <div style="border: 1px solid #666; width: 20rem; margin: .5rem">
            <p><b>{{@key}}</b></p>
            <p>Yoga: {{this.yoga}} cours.</p>
            <p>Pilates: {{this.pilates}} cours.</p>
            <p>Autres cours: {{this.other_classes}} cours.</p>
            <p>Visio: {{this.video}} cours.</p>
            <p><b style="color: red">Total cours: {{this.total}}</b></p>
          </div>
          {{/each}}
      </div>
      <div class="col-3 d-flex flex-column justify-content-start align-items-center">
          {{#each allSalaries}}
          <div style="border: 1px solid #666; width: 20rem; margin: .5rem">
            <p><b>{{@key}}</b></p>
            <p>Yoga: {{this.yoga}}€.</p>
            <p>Pilates: {{this.pilates}}€.</p>
            <p>Autres cours: {{this.other_classes}}€.</p>
            <p>Visio: {{this.video}}€.</p>
          </div>
          {{/each}}
      </div>
    </div>
  </section>
  <section class="container-fluid">
    <div class="row">
        {{#each result}}
        <h1>{{@key}}</h1>
        <div class="col-12 d-flex flex-wrap">
          {{#each this}}
          <div class="parent-calendar-event">
            <h5 class="formated-day">{{@key}}</h5>
            {{#each this}}
            <div style="border: 1px solid yellow; margin: .5rem">
              <p>début des cours: {{this.time}} chez {{this.company}} de {{this.total_classes}} heurs</p>
              <p>yoga: {{this.yoga}}</p>
              <p>pilates: {{this.pilates}}</p>
              <p>visio: {{this.video}}</p>
              <p>autre cours: {{this.other_classes}}</p>
            </div>
            {{/each}}
          </div>
          {{/each}}

        </div>
        {{/each}}
    </div>
  </section>
</body>
</html>
